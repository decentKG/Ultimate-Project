# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Database Configuration (example for MongoDB)
MONGODB_URI=mongodb://localhost:27017/hiring-platform

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Session Configuration (if using sessions)
SESSION_SECRET=your_session_secret_here

# Email Configuration (if sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# File Upload (if handling file uploads)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880 # 5MB
