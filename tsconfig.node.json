{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "vite.config.*",
    "**/vite.config.*",
    "**/*.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**"
  ]
}
